<div class="row">
  <div class="large-12 columns">
    <h1>GET LUCKY AT A LUCKYPOT</h1>
    <h3 class="luckypot">Upcoming Potlucks</h3>
    <button id="newPotluck" class="button">Plan a Potluck</button><br><br>
    <ul>
      <% @potlucks.each do |potluck| %>
    <li>
      <strong><a href="/potlucks/<%= potluck.id %>"><%= potluck.name %></a></strong> on <%= potluck.datetime %> at <%= potluck.location %> <a href="/edit_potluck/<%= potluck.id %>">Edit</a>
    </li>
      <% end %>
    </ul>
  </div>
</div>
<!-- form for new potluck -->
<div id="potluckForm">
  <%= simple_form_for @potluck do |f| %>
    <%= f.input :name %>
    <%= f.input :location %>
   <!--  </%= f.input :datetime, :as => :string, :input_html => { :class => 'date_picker' } %> -->
    <%= f.input :datetime %>
    <%= f.collection_check_boxes :keyword_ids, Keyword.all, :id, :name %>
    <%= f.button :submit %>
  <% end %>
</div>