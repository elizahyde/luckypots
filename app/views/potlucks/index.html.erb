<div class="row">
  <div class="medium-8 columns medium-centered">
    <h3 class="luckypot">Upcoming Potlucks</h3>
    <button id="newPotluck" class="button">Plan a Potluck</button><br><br>
     <!-- form for new potluck. -->
    <div id="potluckForm">
      <%= form_for :potluck do |f| %>
      <h2>New Potluck</h2>
        <%= f.label :name %>
        <%= f.text_field :name%>
        <%= f.label :location %>
        <%= f.text_field :location %>
        <%= f.label :datetime %>
        <%= f.datetime_local_field :datetime %> 
        <%= f.collection_check_boxes :keyword_ids, Keyword.all, :id, :name %>
        <%= f.button :submit %>
      <% end %>
    </div>
    <ul>
      <% @potlucks.each do |potluck| %>
      <li>
        <strong><a href="/potlucks/<%= potluck.id %>"><%= potluck.name %></a></strong> on <%= potluck.datetime.strftime("%A, %b %d, %Y at %I:%M%p") %> at <%= potluck.location %> <a href="/edit_potluck/<%= potluck.id %>">Edit</a>
      </li>
      <% end %>
    </ul>
  </div>
</div>
